<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Controller.Fragment.SearchDialogFragment">

    <TextView
        android:id="@+id/textView_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:textColor="#BA7004"
        android:textSize="18sp"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="#CF7D03">

        <EditText
            android:id="@+id/editText_in_search_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

    </com.google.android.material.textfield.TextInputLayout>


    <ImageButton
        android:id="@+id/imageButton_search_in_search_dialog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_search_orange" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        android:src="@drawable/fr20191015_0075_sefid" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_in_search_dialog"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/button_back_in_search_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_search_style"
        android:text="back"
        android:textColor="#BA6F01"
        android:textSize="24sp" />

</LinearLayout>